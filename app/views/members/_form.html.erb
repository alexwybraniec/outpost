
<%= form_for @user, url: members_path, local: true, html: {class: "two-thirds"} do |f| %>

    <%= render "shared/errors", model: @user %>

    <div class="field-section field-section--two-cols">

        <div class="field field--required">
            <%= f.label :first_name, class: "field__label" %>
            <%= f.text_field :first_name, required: true, class: "field__input one-half" %>
        </div>

        <div class="field field--required">
            <%= f.label :last_name, class: "field__label" %>
            <%= f.text_field :last_name, required: true, class: "field__input one-half" %>
        </div>

        <div class="field field--required">
            <%= f.label :email, "Email address", class: "field__label" %>
            <p class="field__hint">We'll send joining instructions here</p>
            <%= f.email_field :email, required: true, class: "field__input one-half" %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit "Invite", class: "button" %>
    </div>

<% end %>
