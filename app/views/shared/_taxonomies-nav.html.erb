<% 
    @directory_links = {}

    if Directory.any?
      Directory.all.each do |directory|
        @directory_links[directory.name] = admin_taxonomies_path(directory: directory.name);
      end
    end
%>
    
<%= 
  # display the directory headings
  render partial: "shared/directory-shortcuts",  locals: { 
        all_state: !params[:directory].present?,
        all_link: admin_taxonomies_path,
        all_count: @taxonomy_counts.dig(:all, :all),
        all_label: "All",
        directory_links: @directory_links,
        directory_counts: @taxonomy_counts
  }
%>

