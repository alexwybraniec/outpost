
<% content_for :header do %>
    <dl class="big-numbers">
      <div class="big-number">
        <dd class="big-number__number"><%= @service_count %></dd>
        <dt class="big-number__caption"><%= 'Service'.pluralize(@service_count) %></dd>
      </div>
      <div class="big-number">
        <dd class="big-number__number"><%= @user_count %></dd>
        <dt class="big-number__caption"><%= 'Registered user'.pluralize(@user_count) %></dt>
      </div>
      <div class="big-number">
        <dd class="big-number__number"><%= @org_count %></dd>
        <dt class="big-number__caption"><%= 'Organisation'.pluralize(@org_count) %></dt>
      </div>
      <div class="big-number">
        <dd class="big-number__number"><%= @taxa_count %></dd>
        <dt class="big-number__caption"><%= 'Taxonomy'.pluralize(@taxa_count) %></dt>
      </div>
    </dl>
<% end %>

<div class="half-and-half">
  <section class="panel">
    <h2 class="panel__title">Watched services</h2>
    <%= render "watch-table" %>
  </section>

    <section class="panel">
    <h2 class="panel__title">Recent activity</h2>
    <%= render "recent-activity-table" %>
  </section>
</div>
